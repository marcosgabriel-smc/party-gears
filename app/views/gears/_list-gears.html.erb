<div class="navbar bg-light container-fluid justify-content-center">
  <% Gear::CATEGORIES.each do |cat| %>
    <% if @category == cat %>
      <%= link_to(
        cat.upcase,
        root_path,
        class: 'btn btn-dark me-2'
      ) %>
    <% else %>
      <%= link_to(
        cat.upcase,
        category_gears_path(cat),
        class: 'btn btn-outline-dark me-2'
      ) %>
    <% end %>
  <% end %>
</div>
<div class="row d-flex flex-wrap px-5">
  <% gears.each do |gear| %>
    <div class="card col-1 m-2 rounded-3 row" style="width: 18rem;">
      <div class="card-body d-flex flex-column">
        <div class="flex-grow-2">
          <%= image_tag(gear.image_url, class: "card-img-top mt-3 object-fit-cover", alt: "Card image cap") %>
        </div>
        <div class="flex-grow-1">
          <h5 class="card-title"><%= gear.name %></h5>
          <p class="card-text"><%= gear.price %></p>
          <%= link_to "View", gear, class: "btn btn btn-dark" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
