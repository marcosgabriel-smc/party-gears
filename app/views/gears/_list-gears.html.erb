<div class="navbar bg-light container-fluid justify-content-center">
    <%= link_to(
      "Sound",
      category_gears_path('sound'),
      class: 'btn btn-outline-dark me-2'
    ) %>
        <%= link_to(
      "DJ",
      category_gears_path('dj'),
      class: 'btn btn-outline-dark me-2'
    ) %>
        <%= link_to(
      "Lighting",
      category_gears_path('lighting'),
      class: 'btn btn-outline-dark me-2'
    ) %>
</div>
<div class="row justify-content-between">
  <% gears.each do |gear| %>
    <div class="card col-2 m-3 rounded-3" style="width: 18rem;">
      <%= image_tag gear.image_url, class: "card-img-top mt-3", alt: "Card image cap" %>
      <div class="card-body">
        <h5 class="card-title"><%= gear.name %></h5>
        <p class="card-text"><%= gear.price %></p>
        <%= link_to "View", gear, class: "btn btn btn-dark" %>
      </div>
    </div>
  <% end %>
</div>
